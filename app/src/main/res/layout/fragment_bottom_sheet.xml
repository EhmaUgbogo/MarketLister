<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/b_sheet_nestedScrollView"
	android:layout_width="match_parent"
    android:layout_height="200dp"
	android:padding="16dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<TextView
			android:id="@+id/b_sheet_Details_TextView"
			android:text="MarketList Details"
			android:textColor="@color/colorPrimary"
			android:textSize="16sp"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="16dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@+id/b_sheet_Total_TextView"
			android:text="Total Amount: N16,080"
			android:textColor="@android:color/black"
			android:textSize="16sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@+id/b_sheet_itemNo_TextView"
			android:text="Items: 16"
			android:textColor="@android:color/black"
			android:textSize="16sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<Button
			android:id="@+id/b_sheet_Botton"
			android:text="OK"
			android:textColor="@color/icons"
			android:backgroundTint="@color/colorPrimary"
			android:padding="16dp"
			android:layout_marginTop="20dp"
			android:layout_gravity="end"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	</LinearLayout>
</androidx.core.widget.NestedScrollView>