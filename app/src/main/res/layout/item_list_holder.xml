<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/list_holder_RootLayout"
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:layout_marginTop="4dp"
	android:layout_marginBottom="4dp"
	android:layout_marginRight="4dp"
	android:layout_marginLeft="4dp"
	android:padding="8dp"
	app:cardCornerRadius="8dp">


<LinearLayout 
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:padding="8dp"
	android:gravity="center"
	android:layout_margin="4dp"
	android:background="@color/icons"
    android:orientation="horizontal">

	<LinearLayout 
		android:id="@+id/list_holder_LinearLayout_parent"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="5"
		android:orientation="vertical">
		<TextView
			android:id="@+id/list_holder_titleTextView"
			android:textSize="17sp"
			android:textColor="@color/textColorPrimary"
			android:text=""
			android:textStyle="bold"
			android:maxLines="1"
			android:ellipsize="end"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@+id/list_holder_descriptTextView"
			android:textSize="14sp"
			android:textColor="@color/textColorPrimary"
			tools:text="discription"
			android:maxLines="2"
			android:ellipsize="end"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
		<LinearLayout 
			android:id="@+id/list_holder_LinearLayout_left_inside"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/list_holder_timestampTextView"
				android:textSize="12sp"
				android:textColor="@color/textColorSecondary"
				android:visibility="visible"
				android:text="2019,03,11"
				android:ellipsize="end"
				android:layout_marginRight="8dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			<TextView
				android:id="@+id/list_holder_priorityTextView"
				android:textSize="11sp"
				android:textStyle="bold"
				android:textColor="@color/icons"
				android:visibility="visible"
				android:text="Priority High"
				android:ellipsize="end"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout 
		android:id="@+id/list_holder_LinearLayout_Right"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:padding="10dp"
		android:orientation="vertical">
		<TextView
			android:id="@+id/list_holder_counterTextView"
			android:textSize="13sp"
			android:text="0"
			android:textColor="@color/icons"
			android:textStyle="bold"
			android:background="@drawable/button_background"
			android:paddingLeft="4dp"
			android:paddingRight="4dp"
			android:layout_gravity="top|center_horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<ImageView
			android:id="@+id/list_holder_alarm"
			android:layout_width="wrap_content"
			android:layout_height="25dp"
			android:layout_gravity="bottom|center_horizontal"
			android:layout_marginTop="16dp"
			android:src="@drawable/ic_alarm_on_green_24dp"
			android:visibility="invisible"/>
	</LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>